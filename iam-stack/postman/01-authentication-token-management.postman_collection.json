            },
            {
              "key": "client_id",
              "value": "service-account",
              "type": "text"
            },
            {
              "key": "client_secret",
              "value": "{{client_secret}}",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/realms/{{realm}}/protocol/openid-connect/token",
          "host": ["{{base_url}}"],
          "path": ["realms", "{{realm}}", "protocol", "openid-connect", "token"]
        },
        "description": "Obtain access token using client credentials for service-to-service authentication."
      },
      "response": []
    },
    {
      "name": "Refresh Token",
      "event": [
