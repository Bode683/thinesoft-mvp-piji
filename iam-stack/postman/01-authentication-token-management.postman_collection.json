          "urlencoded": [
            {
              "key": "token",
              "value": "{{access_token}}",
              "type": "text"
            },
            {
              "key": "client_id",
              "value": "{{admin_client_id}}",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/realms/{{master_realm}}/protocol/openid-connect/token/introspect",
