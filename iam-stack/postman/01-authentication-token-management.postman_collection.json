        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "grant_type",
              "value": "refresh_token",
              "type": "text"
            },
            {
              "key": "client_id",
              "value": "{{admin_client_id}}",
              "type": "text"
            },
