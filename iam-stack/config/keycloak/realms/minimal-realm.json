{
  "realm": "minimal",
  "displayName": "Minimal Realm",
  "enabled": true,
  "sslRequired": "external",
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "admin"
        }
      ],
      "realmRoles": [
        "admin"
      ]
    }
