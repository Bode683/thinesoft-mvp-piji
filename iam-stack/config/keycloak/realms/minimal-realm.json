      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "redirectUris": [
        "http://localhost:8080/*"
      ],
      "webOrigins": [
        "+"
      ]
    }
  ],
  "defaultRoles": [
    "user"
  ]
